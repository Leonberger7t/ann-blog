<h3>Post show page</h3>
<!--displays the post ID, title and content in the browser   -->
<%= @post.id %>.
<%= @post.title %> <br>
<%= @post.content %> <br>
<br>

Blog by: <%= @post.user.fname %> <%= @post.user.lname %>

<br>

<h3>Comments:</h3>
<!--  all the comments are displayed in the browser with this loop-->
<% @comments.each do |comment| %>
<%= comment.content %>|

<% end%>

<h3>Add comment</h3>
<!-- this view will display in the browser a new comment -->
<%= form_for Comment.new do |f| %>

  <%= f.label :content %>
  <%= f.text_field :content %> <br>

  <%= f.label :user %><br>
  <%= f.collection_select :user_id, User.all, :id, :fname %><br>


  <%= f.label :post %><br>
  <%= f.collection_select :post_id, Post.all, :id, :title %><br>

  <br><br>

  <%= f.submit %>
<% end %>
