<h3>Register for an account here</h3>

  <!--  this is a new form to create a new user-->

<%= form_for User.new do |f| %>
  <%= f.label :fname %><br>
  <%= f.text_field :fname %> <br>

  <%= f.label :lname %><br>
  <%= f.text_field :lname %> <br>

  <%= f.label :username %><br>
  <%= f.text_field :username %> <br>

  <%= f.label :email %><br>
  <%= f.text_field :email %> <br>

  <%= f.label :password %><br>
  <%= f.text_field :password %> <br>
  <br><br>

  <%= f.submit %>

  <% end %>
